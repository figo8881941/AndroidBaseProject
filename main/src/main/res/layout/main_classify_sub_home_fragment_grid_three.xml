<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/main_classify_sub_home_fragment_grid_three_height"
    android:background="@android:color/white"
    >

    <RelativeLayout
        android:id="@+id/item_one"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintDimensionRatio="h,16:15"
        app:layout_constraintLeft_toLeftOf="parent">

    </RelativeLayout>

    <View
        android:id="@+id/item_one_divider"
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/main_classify_sub_home_fragment_grid_three_divider_bg"
        app:layout_constraintLeft_toRightOf="@id/item_one" />

    <RelativeLayout
        android:id="@+id/item_two"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintLeft_toRightOf="@id/item_one_divider"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </RelativeLayout>

    <View
        android:id="@+id/item_two_divider"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:background="@color/main_classify_sub_home_fragment_grid_three_divider_bg"
        app:layout_constraintLeft_toRightOf="@id/item_one_divider"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_two" />

    <RelativeLayout
        android:id="@+id/item_three"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/item_one_divider"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_two_divider">

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>