<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    app:cardCornerRadius="@dimen/main_common_list_item_single_small_product_layout_card_radius"
    app:cardElevation="0px"
    app:cardMaxElevation="0px">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/item_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_common_list_item_single_small_product_layout_imgsize"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_img"
            android:layout_marginLeft="@dimen/main_common_list_item_single_small_product_layout_item_title_margin_left_right"
            android:layout_marginTop="@dimen/main_common_list_item_single_small_product_layout_item_title_margin_top"
            android:layout_marginRight="@dimen/main_common_list_item_single_small_product_layout_item_title_margin_left_right"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/main_common_list_item_single_small_product_layout_item_title_textcolor"
            android:textSize="@dimen/main_common_list_item_single_small_product_layout_item_title_textsize" />

        <TextView
            android:id="@+id/item_tag"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/main_common_list_item_single_small_product_layout_item_tag_height"
            android:layout_below="@id/item_title"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/main_common_list_item_single_small_product_layout_item_tag_margin_left_right"
            android:layout_marginTop="@dimen/main_common_list_item_single_small_product_layout_item_tag_margin_top"
            android:background="@drawable/main_common_list_item_two_product_layout_tag_bg"
            android:paddingLeft="@dimen/main_common_list_item_single_small_product_layout_item_tag_padding"
            android:paddingRight="@dimen/main_common_list_item_single_small_product_layout_item_tag_padding"
            android:textColor="@color/main_common_list_item_single_small_product_layout_item_tag_textcolor"
            android:textSize="@dimen/main_common_list_item_single_small_product_layout_item_tag_textsize" />

        <TextView
            android:id="@+id/item_postal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_title"
            android:layout_alignBaseline="@id/item_tag"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/main_common_list_item_single_small_product_layout_item_postal_margin_left_right"
            android:text="@string/main_common_list_item_two_product_postal"
            android:textColor="@color/main_common_list_item_single_small_product_layout_item_postal_textcolor"
            android:textSize="@dimen/main_common_list_item_single_small_product_layout_item_postal_textsize"

            />

        <TextView
            android:id="@+id/item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_tag"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/main_common_list_item_single_small_product_layout_item_price_margin_top"
            android:layout_marginLeft="@dimen/main_common_list_item_single_small_product_layout_item_price_margin_left_right"
            android:textColor="@color/main_common_list_item_single_small_product_layout_item_price_textcolor"
            android:textSize="@dimen/main_common_list_item_single_small_product_layout_item_price_textsize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_original_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_tag"
            android:layout_alignBaseline="@id/item_price"
            android:layout_toRightOf="@id/item_price"
            android:layout_marginLeft="@dimen/main_common_list_item_single_small_product_layout_item_original_price_margin_left_right"
            android:textColor="@color/main_common_list_item_single_small_product_layout_item_original_price_textcolor"
            android:textSize="@dimen/main_common_list_item_single_small_product_layout_item_original_price_textsize" />

        <TextView
            android:id="@+id/item_buy_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_tag"
            android:layout_alignBaseline="@id/item_price"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/main_common_list_item_single_small_product_layout_item_buy_count_margin_left_right"
            android:textColor="@color/main_common_list_item_single_small_product_layout_item_buy_count_textcolor"
            android:textSize="@dimen/main_common_list_item_single_small_product_layout_item_buy_count_textsize" />

    </RelativeLayout>
</android.support.v7.widget.CardView>